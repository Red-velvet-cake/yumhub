<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeableImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/spacing_normal</item>
    </style>

    <style name="MyToolbarStyle" parent="android:Widget.Material.Toolbar">
        <item name="android:titleTextAppearance">@style/MyToolbarTitleTextAppearance</item>
        <item name="android:subtitleTextAppearance">@style/MyToolbarSubtitleTextAppearance</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_16dp</item>
        <item name="android:textColor">@color/fontColor_primary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="DietToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/fontColor_primary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="MyToolbarSubtitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fontColor_secondary</item>
    </style>

    <style name="Style_Home_Title">
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_large_24</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/fontColor_primary</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="Style_Home_Recycler_View">
        <item name="android:layout_marginTop">@dimen/small_space</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_x_small</item>
    </style>

    <style name="deitTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black_title_36</item>
    </style>

    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/fontColor_primary</item>
    </style>

    <style name="TextStyle.SemiBold">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="TextStyle.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextStyle.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/fontColor_accent</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="Style_Custom_Date_Picker" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">#000099</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:textColorPrimary">@color/fontColor_primary</item>
        <item name="android:textColorSecondary">@color/fontColor_secondary</item>
    </style>

    <style name="Style_Radio_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="ImageViewMessageShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="MealTypeStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/OppositeRoundCorner</item>
    </style>

    <style name="OppositeRoundCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>
</resources>