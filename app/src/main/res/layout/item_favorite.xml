<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.red_velvet.yumhub.ui.favorites.FavoritesUiState.RecipeUiState" />

        <variable
            name="listener"
            type="com.red_velvet.yumhub.ui.favorites.FavoriteInteractionListener" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_4dp"
        android:backgroundTint="@color/background"
        android:clickable="true"
        android:elevation="0dp"
        android:focusable="true"
        android:onClick="@{() -> listener.onFavoriteRecipeClicked(item.id)}"
        app:cardCornerRadius="@dimen/_16dp"
        app:contentPadding="@dimen/size_8dp"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_favorite"
                android:layout_width="@dimen/image_card_width_100dp"
                android:layout_height="@dimen/image_card_width_80dp"
                android:scaleType="centerCrop"
                app:imageUrl="@{item.image}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/title"
                style="@style/TextStyle.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{item.title}"
                app:layout_constraintBottom_toTopOf="@id/overview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_favorite"
                app:layout_constraintTop_toTopOf="@id/img_favorite"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Dolma" />

            <TextView
                android:id="@+id/overview"
                style="@style/TextStyle.Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{item.overview}"
                app:layout_constraintBottom_toBottomOf="@id/img_favorite"
                app:layout_constraintEnd_toEndOf="@id/title"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:text="I was stuck at home all day yesterday while we were having some  ..." />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>