<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.red_velvet.yumhub.ui.search.SearchResultUIState" />
        <variable
            name="listener"
            type="com.red_velvet.yumhub.ui.fnd_meal.FindYourMealInteractionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/no_height"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginHorizontal="@dimen/_8dp"
        app:cardCornerRadius="@dimen/raduis_16dp"
        android:background="@color/bg_white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> listener.onRecipeFindYourMealResultClicked(item.id)}"
        android:orientation="vertical">



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recipe_image_view"
            android:layout_width="@dimen/_248dp"
            android:layout_height="@dimen/size_125dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{item.image}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/recipe" />

        <TextView
            android:id="@+id/recipe_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_x_small"
            android:ellipsize="end"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:text="@{item.title}"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black_title"
            tools:text="chicken"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_image_view"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>