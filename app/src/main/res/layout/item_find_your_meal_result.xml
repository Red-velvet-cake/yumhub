<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.red_velvet.yumhub.ui.search.SearchResultUIState" />

        <variable
            name="listener"
            type="com.red_velvet.yumhub.ui.fnd_meal.FindYourMealInteractionListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_x_small"
        android:onClick="@{() -> listener.onRecipeFindYourMealResultClicked(item.id)}"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recipe_image_view"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:imageUrl="@{item.image}"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recipe_text_view"
            app:shapeAppearanceOverlay="@style/ShapeableImageViewStyle"
            tools:src="@drawable/recipe" />

        <TextView
            android:id="@+id/recipe_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_x_small"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:text="@{item.title}"
            android:textColor="#DE000000"
            android:textSize="@dimen/font_size_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_image_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>