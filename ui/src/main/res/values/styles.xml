<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeableImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/spacing_normal</item>
    </style>

    <style name="MyToolbarStyle" parent="android:Widget.Material.Toolbar">
        <item name="android:titleTextAppearance">@style/MyToolbarTitleTextAppearance</item>
        <item name="android:subtitleTextAppearance">@style/MyToolbarSubtitleTextAppearance</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fontColor_primary</item>
    </style>

    <style name="MyToolbarSubtitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/fontColor_secondary</item>
    </style>

    <style name="Style_Home_Title">
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_large_24</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="Style_Home_Recycler_View">
        <item name="android:layout_marginTop">@dimen/small_space</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_x_small</item>
    </style>
</resources>